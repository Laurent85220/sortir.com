{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
<div class="row">
    <div class="card detail col-md-8 offset-2 p-0">
        <div  class="card-header">
            <h1>Gestion des Villes</h1>
        </div>

        <div class="card-text mt-3 p-3">
            <div class="row">
                <div class="col-md-12">


                <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Code Postal</th>
                        <th class="text-center">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ville in villes %}
                    <tr>
                        <td>{{ ville.id }}</td>
                        <td class="text-center">{{ ville.nom }}</td>
                        <td class="text-center">{{ ville.cp }}</td>

                        <td>
                            <div class="row justify-content-center">
                            <a href="{{ path('ville_show', {'id': ville.id}) }}" class="btn btn-primary d-inline-flex mr-2">Voir</a>
                            <a href="{{ path('ville_edit', {'id': ville.id}) }}"class="btn btn-warning d-inline-flex mr-2">Modifier</a>
                            {{ include('ville/_delete_form.html.twig') }}
                            </div>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucune ville trouv√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
                    <div class="text-center">
    <a href="{{ path('ville_new') }}"class="btn btn-success d-inline-flex">Ajouter une ville</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
