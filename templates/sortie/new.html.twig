{% extends 'base.html.twig' %}

{% block title %}New Sortie{% endblock %}
{% block javascripts %}{% endblock %}

{% block body %}



    <div class="Container-fluid mt-5">
        <div class="row">
            <div class="card col-md-8 offset-2 p-0">
                <div  class="card-header">
                <h1>Cr√©er une sortie</h1>
                </div>
                <div class="card-text mt-3 p-3">
                    {{form_start(form) }}
                    {{form_row(form.nom) }}
                    {{form_row(form.dateHeureDebut) }}
                    {{form_row(form.dateLimiteInscription) }}
                    {{form_row(form.nbInscriptionsMax) }}
                    {{form_row(form.duree) }}
                    <button class="btn btn-success">Valider</button>
                    {{ form_end(form) }}

                    <p>Organisateur : {{ organisateur.nom }}</p>
                    <p>Ville organisatrice : {{ organisateur.centreFormation.nom}}</p>


                        <select id="ville">

                            {% for ville in villes %}
                                <option value="{{ ville.id }}">{{ ville.nom }}</option>
                            {% endfor %}
                            <!--
                            <option>Poitiers</option>
                            <option>La Roche Sur Yon</option>
                            -->
                        </select>

                    <br>

                        <select id="lieu" d>
                            <option value="0">Lieu</option>
                            {% for lieu in lieux %}
                                <option value="{{ lieu.id }}">{{ lieu.nom }}</option>
                            {% endfor %}
                            <!--
                            <option>Le top bar</option>
                            <option>Le pire bar</option>
                            -->
                        </select>

                    <div id="resultat"></div>
                    <script>
                        var ville = document.getElementById("ville");
                        ville.addEventListener("change",function(){
                            document.getElementById("resultat").innerHTML=ville.options[ville.selectedIndex].value;

                        });
                    </script>
                    <script>
                        var lieu = document.getElementById("lieu");
                        ville.addEventListener("change",function(){
                            document.getElementById("resultat").innerHTML=lieu.options[lieu.selectedIndex].value;
                        });
                    </script>
                    <br>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
