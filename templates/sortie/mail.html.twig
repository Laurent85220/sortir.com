{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie{% endblock %}

{% block body %}
    <div class="Container-fluid mt-5">
        <div class="row">
            <div class="card col-md-6 offset-3 p-0">
                <div  class="card-header text-center">
                    <h1>Annuler la sortie {{ sortie.nom }}</h1>
                </div>
                <div class="card-text mt-3 p-3">
                    <p><b>Date de la sortie :</b> {{ sortie.dateHeureDebut.format('d-M-y') }}</p>
                    <p><b>Ville Organisatrice :</b> {{ sortie.centreFormation.nom}}</p>
                    <p><b>Lieu :</b> {{ sortie.lieu.nom }}</p>
                    <p><b>Motif :</b> {{ sortie.motif }}</p>
                    <p><b>Un mail va être envoyé aux participants : </b></p>
                    {% if sortie.participants is null %}
                        <p>pas de participants inscrits à l'évènement</p>
                    {% else %}
                        <ul>
                            {% for participant in sortie.participants %}
                            <li>{{ participant.pseudo }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    <div class="col-12 text-center mt-2">
                        <a href="{{ path('mail_sortie', {'id': sortie.id}) }}" class="btn btn-success d-inline justify-content-center">Valider</a>
                        <a href="{{ path('cancel_mail', {'id': sortie.id}) }}" class="btn btn-danger d-inline-flex">Retour</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}