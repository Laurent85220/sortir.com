{% extends 'base.html.twig' %}

{% block body %}

    <div class="Container-fluid mt-5">
        <div class="row">
            <div class="card col-md-6 offset-3 p-0">
                <div  class="card-header text-center">
                    <h1>Annuler une sortie </h1>
                </div>
                <div class="card-text mt-3 p-3">
                    <div class="row">
                        <div class="col-md-6">
                            <p><b>Nom de la sortie :</b> {{ sortie.nom }}</p>
                            <p><b>Date de la sortie :</b> {{ sortie.dateHeureDebut.format('d-M-y') }}</p>
                            <p><b>Ville Organisatrice :</b> {{ sortie.centreFormation.nom}}</p>
                            <p><b>Lieu:</b> {{ sortie.lieu.nom }}</p>
                            <p><b>Motif :</b> {{ form_start(form) }}
                                {{ form_widget(form) }}
                            </p>
                        </div>
                        <div class="col-12 text-center mt-2">
                            <button class="btn">{{ button_label|default('Save') }}</button>
                            <a href="{{ path('home') }}" class="btn btn-primary d-inline-flex">Retour</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}



