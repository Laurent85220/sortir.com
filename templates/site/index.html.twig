{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
<div class="row">
    <div class="card detail col-md-8 offset-2 p-0">
        <div  class="card-header">
            <h1>Site index</h1>
        </div>

        <div class="card-text mt-3 p-3">
            <div class="row">
                <div class="col-md-12">


                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th class="text-center">Nom</th>
                            <th class="text-center">actions</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for site in sites %}
                            <tr>
                                <td>{{ site.id }}</td>
                                <td class="text-center">{{ site.nom }}</td>

                                <td>
                                    <div class="row justify-content-center">
                                        <a href="{{ path('site_show', {'id': site.id}) }}" class="btn btn-primary d-inline-flex mr-2">Voir</a>
                                        <a  href="{{ path('site_edit', {'id': site.id}) }}"class="btn btn-warning d-inline-flex mr-2">Modifier</a>
                                        {{ include('site/_delete_form.html.twig') }}
                                    </div>
                                </td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun site trouv√©</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="text-center">
                        <a href="{{ path('site_new') }}"class="btn btn-success d-inline-flex">Ajouter un site</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
