{% extends 'base.html.twig' %}

{% block title %}Modfier mon profil{% endblock %}

{% block body %}
        <div class="row">
            <div class="card detail col-md-8 offset-2 p-0">
                <div  class="card-header">
                    <h1>Mon profil</h1>
                </div>

                <div class="card-text mt-3 p-3">
                    <div class="row">
                        <div class="col-md-8">
                            {{ form_start(registrationForm) }}
                             {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword) }}
                            {{ form_row(registrationForm.pseudo) }}
                            {{ form_row(registrationForm.nom) }}
                            {{ form_row(registrationForm.prenom) }}
                            {{ form_row(registrationForm.telephone) }}
                            {{ form_row(registrationForm.ville) }}
                            {{ form_row(registrationForm.cp) }}
                            {{ form_row(registrationForm.centreFormation) }}
                        </div>
                        <div class="col-md-4">
                            <div class="card-img  border d-flex align-items-center">
                                <img class="w-100 h-auto" src="{% if app.user.file is empty %}{{ asset('img/default.jpg')}}{% endif %}{{  asset('uploads/' ~ app.user.file) }}" alt="{{ app.user.pseudo }}">
                            </div>
                            <div class="mt-3 ">
                                {{ form_widget(registrationForm.file) }}
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                    <button class="btn btn-success d-inline-flex">Valider</button>
                    <a href="{{ path('home') }}" class="btn btn-danger d-inline-flex">Annuler</a>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}





