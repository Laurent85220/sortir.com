{% extends 'base.html.twig' %}

{% block title %}Modfier mon profil{% endblock %}

{% block body %}
    <div class="Container-fluid mt-5">
        {% for label, messages in app.flashes %}
            {%  for message in messages %}
                <div class="alert-{{ label }} col-sm-4 offset-sm-4 text-center p-3">
                    {{ message  }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row">
            <div class="card col-md-8 offset-2 p-0">
                <div  class="card-header">
                    <h1>Mon profil</h1>
                </div>
                <div class="card-text mt-3 p-3">
                    {{ form_start(registrationForm) }}
                     {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    {{ form_row(registrationForm.pseudo) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.telephone) }}
                    {{ form_row(registrationForm.ville) }}
                    {{ form_row(registrationForm.cp) }}
                    {{ form_row(registrationForm.centreFormation) }}

                    <button class="btn btn-success d-inline-flex">Valider</button>
                    <a href="{{ path('home') }}" class="btn btn-danger d-inline-flex">Annuler</a>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}





